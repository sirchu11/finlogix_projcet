{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@image/*": ["assets/images/*"],
            "@scss/*": ["assets/scss/*"],
            "@component/*": ["components/*"],
            "@page/*": ["pages/*"],
        }
    },
    "include": [
        "./src/**/*"
    ]
}